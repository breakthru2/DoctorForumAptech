@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="mt-3 mr-2 font-weight-bold">
            @Html.ActionLink("SIGNED IN", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })

        </li>

        <li class="mt-3 font-weight-bold">|</li>

        <li class="mt-3"><a class="font-weight-bold text-danger p-2 rounded" href="javascript:document.getElementById('logoutForm').submit()">SIGN OUT</a></li>

        <li class="mt-3 font-weight-bold">|</li>

        <li class="mt-3 ml-2 text-success font-weight-bold">Registered : @ViewBag.userCount</li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="mt-3 mr-2 font-weight-bold">@Html.ActionLink("REGISTER", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li class="mt-3 mr-4 font-weight-bold">@Html.ActionLink("LOGIN", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li class="mt-3 mr-2 font-weight-bold">Registered : @ViewBag.userCount</li>

    </ul>
}
