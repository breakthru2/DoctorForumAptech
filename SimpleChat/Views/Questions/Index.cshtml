@model SimpleChat.Models.Questions
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mt-5">
        <h5 class="font-weight-bold text-info">HAVE ANY PROBLEM?</h5>
        <hr /> <br />

        @using (Html.BeginForm("Add", "Questions"))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.QuestionText)
                @Html.TextBoxFor(m => m.QuestionText, new { @class = "form-control rounded" })
            </div>

            @Html.HiddenFor(m => m.UserId)

            <button type="submit" class="btn btn-info w-25 rounded">Submit</button>
        }

    </div>